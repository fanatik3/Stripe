{
    "name": "your-name-here/Stripe",
    "description": "Stripe plugin for CakePHP",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=5.5.9",
        "cakephp/cakephp": ">=3.3.2 <4.0.0",
        "stripe/stripe-php": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Stripe\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stripe\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
